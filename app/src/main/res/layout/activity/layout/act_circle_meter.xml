<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--仪表盘-->
    <zhuwentao.com.zwtwitmass.uimodule.custom.CircleMeterView
        android:id="@+id/cmv_meter"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="250dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <zhuwentao.com.zwtwitmass.uimodule.custom.CircleLoadingView
            android:id="@+id/clv_loading"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <zhuwentao.com.zwtwitmass.uimodule.custom.CircleLoadingView
            android:id="@+id/clv_loading_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:baseColor="@color/white"
            app:dotColor="@color/green"
            app:indexColor="@color/red"/>

    </LinearLayout>


    <!--滚动条-->
    <SeekBar
        android:id="@+id/sb_index_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

</LinearLayout>