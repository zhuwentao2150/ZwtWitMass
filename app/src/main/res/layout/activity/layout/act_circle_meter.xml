<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--&lt;!&ndash;仪表盘&ndash;&gt;-->
    <!--<zhuwentao.com.zwtwitmass.uimodule.custom.CircleMeterView-->
        <!--android:id="@+id/cmv_meter"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="300dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <zhuwentao.com.zwtwitmass.uimodule.custom.CircleLoadingView
            android:id="@+id/clv_loading"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <zhuwentao.com.zwtwitmass.uimodule.custom.CircleLoadingView
            android:id="@+id/clv_loading_two"
            android:layout_width="150dp"
            app:indexColor="@color/red"
            app:baseColor="@color/white"
            app:dotColor="@color/green"
            android:layout_marginLeft="30dp"
            android:layout_height="150dp"/>

    </LinearLayout>


    <!--滚动条-->
    <SeekBar
        android:id="@+id/sb_index_position"
        android:layout_width="match_parent"
        android:max="100"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>

</LinearLayout>