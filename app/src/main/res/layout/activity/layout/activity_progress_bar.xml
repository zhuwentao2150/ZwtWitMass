<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_progress_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ProgressBar
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/pg_h_bar"
        style="@style/ProgressBar_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <zhuwentao.com.zwtwitmass.uimodule.custom.DotProgressBar
        android:id="@+id/dpb_h_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="24sp"/>

    <zhuwentao.com.zwtwitmass.uimodule.custom.CustomDonutDot
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/cdd_dount_dot"
        android:layout_width="200dp"
        app:dotCount="19"
        app:splitSize="30"
        app:circleWidth="10dp"
        app:bg="@mipmap/ic_launcher"
        android:layout_height="200dp"/>

</LinearLayout>
