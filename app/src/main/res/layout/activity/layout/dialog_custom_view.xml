<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_common_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_common_dialog_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textColor="@color/dim_gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="44dp"
            android:textSize="15dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line_dialog"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/dim_gray"
            android:padding="10dp" />


        <LinearLayout
            android:id="@+id/ll_common_dialog_double"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_common_dialog_double_left"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_account_button_orange"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <Button
                android:id="@+id/btn_common_dialog_double_right"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_account_button_orange"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确定"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>